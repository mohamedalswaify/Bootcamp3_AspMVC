@model Product
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Product</h1>

<form method="post" asp-action="Delete">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" disabled name="Name" class="form-control" />
      
    </div>
    <div class="mb-3">
        <label for="Price">Price</label>
        <input type="text" asp-for="Price" disabled name="Price" class="form-control" />

    </div>


    <div class="mb-3">
        <label for="Description">Description</label>
        <textarea asp-for="Description" disabled name="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-outline-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>

</form>
