@model Product
@{
    ViewData["Title"] = "Create";
}

<h1>Create Product</h1>

<form method="post" asp-action="Create">
      @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Price">Price</label>
        <input type="text" asp-for="Price" name="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoryList">
    <option value="0" disabled selected>Select Category</option>
</select>
    </div>


    <div class="mb-3">
        <label for="Description">Description</label>
        <textarea asp-for="Description" name="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary">Save</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>

</form>
