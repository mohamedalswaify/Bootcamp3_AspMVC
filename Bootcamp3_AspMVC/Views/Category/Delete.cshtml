@model Category
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Category</h1>

<form method="post" asp-action="PostDelete">
    @Html.AntiForgeryToken()

    <input type="text" asp-for="Uid" hidden disabled name="Uid" class="form-control" />
    <div class="mb-3">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" disabled name="Name" class="form-control" />
    </div>



    <div class="mb-3">
        <label for="Description">Description</label>
        <textarea asp-for="Description" disabled name="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-outline-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>

</form>
