@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Categories List</h1>


<div class="container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Name
                </th>
                <th>
                    Discription
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Discraption</td>
                </tr>


            }
        </tbody>
    </table>
</div>

